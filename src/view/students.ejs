<!-- Button trigger modal -->
<button
  type="button"
  class="btn btn-primary mt-2 mx-2"
  data-bs-toggle="modal"
  data-bs-target="#add-student"
>
  Add Student
</button>
<!-- Modal -->
<div
  class="modal fade"
  id="add-student"
  data-bs-backdrop="static" data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add student</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form
          action="/student/add"
          method="POST"
          enctype="application/x-www-form-urlencoded"
        >
          <div class="mb-3">
            <label for="batchName" class="form-label">Batch Name</label>
            <input
              type="text"
              class="form-control"
              id="batchName"
              name="batchName"
              required
            />
          </div>
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              required
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              aria-describedby="emailHelp"
              required
            />
            <div id="emailHelp" class="form-text">
              We'll never share your email with anyone else.
            </div>
          </div>
          <div class="mb-3">
            <label for="college" class="form-label">College Name</label>
            <input
              type="text"
              class="form-control"
              id="college"
              name="college"
              required
            />
          </div>
          <div class="mb-3">
            <label for="placementStatus" class="form-label"
              >Placement Status</label
            >
            <input
              type="text"
              class="form-control"
              id="placementStatus"
              name="placementStatus"
              required
            />
          </div>
          <div class="mb-3">
            <label for="DSAScore" class="form-label">DSA Final Score</label>
            <input
              type="Number"
              class="form-control"
              id="DSAScore"
              name="DSAScore"
              value=0
            />
          </div>
          <div class="mb-3">
            <label for="WebDScore" class="form-label">WebD Final Score</label>
            <input
              type="Number"
              class="form-control"
              id="WebDScore"
              name="WebDScore"
              value=0
            />
          </div>
          <div class="mb-3">
            <label for="ReactScore" class="form-label">React Final Score</label>
            <input
              type="Number"
              class="form-control"
              id="ReactScore"
              name="ReactScore"
              value=0
            />
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
      </div>
    </div>
  </div>
</div>

<h2 class="text-center">All students</h2>
<%if(allStudents.length==0){%>
<h3 class="mt-1 text-center">No students are there</h3>
<%}%> <%if(allStudents.length>0){%>
<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Batch</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">College</th>
      <th scope="col">Placement Status</th>
      <th scope="col">DSA Final Score</th>
      <th scope="col">WebD Final Score</th>
      <th scope="col">React Final Score</th>
    </tr>
  </thead>
  <tbody>
    <%allStudents.forEach(student=>{%>
    <tr>
      <td><%= student._id %></td>
      <td><%= student.batchName %></td>
      <td><%= student.name %></td>
      <td><%= student.email %></td>
      <td><%= student.college %></td>
      <td><%= student.placementStatus %></td>
      <td><%= student.courseScores.DSAScore %></td>
      <td><%= student.courseScores.WebDScore %></td>
      <td><%= student.courseScores.ReactScore %></td>
    </tr>
    <% })%>
  </tbody>
</table>
<%}%>
